//保留1位小数
var fnPrice = function (num) {
    num = num.toFixed(1);
    return num;
};

var fnEmpty = function (num) {
    if (num == 0) {
        return '暂无'
    } else {
        return num
    }
};

//传入金额换算成单位万元
var fnBitNum = function (num) {

    if (isNaN(parseFloat(num))) {
        return 0
    }

    var result = parseFloat(num) / 10000;
    if (result > 1) {
        result = result % 1 == 0 ? result : (result.toFixed(2) + '万');
    } else {
        result = num
    }
    return result;
};

var fnCalculate = function () {
    var price = arguments[0]

    for (var i = 1; i < arguments.length; i++) {
        var coup = arguments[i] || 0
        price = price - coup
    }

    return fnPrice(price)
}

module.exports = {
    fnPrice: fnPrice,
    fnEmpty: fnEmpty,
    fnBitNum: fnBitNum,
    fnCalculate: fnCalculate
}